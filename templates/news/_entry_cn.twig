{% extends "_layout_cn" %} {% block main %}
    <div class="page-header header-filter" data-parallax="true"
         style="background-image: url({{ entry.image.one.url }}); transform: translate3d(0px, 0px, 0px);">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto text-center">
                    <h1 class="title">{{ entry.title }}</h1>
                    <h4>{{ entry.introduction }}</h4>
                    <br>
                    <a onclick="document.querySelector('#readArch').scrollIntoView({ behavior: 'smooth' });"
                       class="btn btn-rose btn-round btn-lg">
                        <i class="material-icons">format_align_left</i> 阅读文章
                        <div class="ripple-container"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="readArch" style="position: absolute; top: 145%;"></div>
    <div class="main main-raised">
        <div class="container">
            <div class="section section-text">

                <div class="row">
                    {% for block in entry.article.all() %}
                        {% switch block.type %}
                        {% case 'textBlock' %}

                            <div class="col-md-8 ml-auto mr-auto">
                                {{ block.paragraphs }}
                            </div>
                        {% case 'imageBlock' %}

                            <div class="py-3 col-md-10 ml-auto mr-auto">
                                <div class="row">

                                    <div class="col">
                                        <img class="img-raised rounded img-fluid mx-auto d-block" alt="Raised Image"
                                             src="{{ block.image.one.url }}">
                                    </div>

                                </div>
                            </div>
                        {% endswitch %}

                    {% endfor %}

                </div>
            </div>

        </div>
        {% if craft.app.language == 'zh' %}
            {% include "_form_cn" %}
        {% endif %}
    </div>
{% endblock %}